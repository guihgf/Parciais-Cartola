<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textPosicaoNaLiga"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1ยบ"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textNomeTimeLiga"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Nome do meu time"
                android:textSize="12dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/textParcialNaRodadaLiga"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="100.99"
                android:textSize="12dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textTotalPontosNaLiga"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="100.99"
                android:textSize="12dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/imgEscudoTimeLiga"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <TextView
                android:id="@+id/textNomeCartoleiroLiga"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Ciclano de Beltrano"
                android:layout_gravity="center_vertical"
                android:textSize="12dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textTotalJogadoresNaRodaLiga"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="12/12"
                android:textSize="12dp"
                android:layout_gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textTotalPatrimonioNaLiga"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="C$100.99"
                android:textSize="12dp"
                android:textStyle="bold"

                />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>